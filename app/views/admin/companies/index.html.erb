
<link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables.css">       
              <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables_themeroller.css">          
               <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>         
               <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/jquery.dataTables.min.js"></script>
<div class="faq">
  <div class="container">
    <div class="row" style="margin-top:150px;">
      <div class="span12">
       <p>
       	 <ol class = "breadcrumb">
            <li><%= link_to 'Dashboard',admin_root_path %></li>
            <li class = "active">Companies</li>
            <li><%= link_to 'Create Company', new_admin_company_path %></li>
          </ol>
          
       </p>

<!-- <table border cellspacing=0 cellpadding=10> -->
	<table cellpadding="0" cellspacing="0" border="0" class="dataTable" id="exampled">
		<thead>
			<tr>
				<th><%= "Internship Type" %></th>
				<th><%= "Company Name" %></th>
				<th><%= "Email" %></th>
				<th><%= "Company Website" %></th>
				<th><%= "Edit"%></th>
				<th><%= "View"%></th>
				<th><%= "Delete"%></th>
			</tr>
		</thead>
		<tbody>
			<% @company.each do |company| %>

				<tr>
					<td><%= company.try(:internship_type) %></td>
					<td><%= company.try(:company_name) %></td>
					<td><%= auto_link(company.try(:email)) %></td>
					<td><%= auto_link(company.try(:company_website)) %></td>
					<td><%= link_to 'Edit', edit_admin_company_path(company) %></td>
					<td><%= link_to 'Show Company', admin_company_path(company) %></td>
					<td><%= link_to 'Delete', admin_company_path(company), method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
    </div>
  </div>
</div>
<script type="text/javascript">

     $(document).ready(function() {
    $('#exampled').dataTable({"sPaginationType": "full_numbers"});
});
    </script>