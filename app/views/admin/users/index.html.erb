
<div class="faq">
  <div class="container">
    <div class="row" style="margin-top:150px;">
      <div class="span12">
        <p>
          
          <ol class = "breadcrumb">
            <li><%= link_to 'Dashboard',admin_root_path %></li>
            <li class = "active">Users</li>
            <li><%= link_to 'New Faculty/Staff', new_admin_user_path(:role => params[:role]) %></li>
          </ol>
       </p>
       
        <h1>Users</h1>

        <table cellpadding="0" cellspacing="0" border="0" class="dataTable" id="example">
  <thead>
    <tr>
  
      <th><%= "First Name" %></th>
      <th><%= "Last Name" %></th>
      <th><%= "email" %></th>
      <th><%= "Role" %></th>
      <th><%="Delete"%></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name rescue nil %></td>
        <td><%= user.last_name rescue nil %></td>
        <td><%= user.email rescue nil %></td>
        <td><%= user.role rescue nil %></td>
        <td>
          <%= button_to("Delete",admin_user_path(user), {:onclick => "return confirm('Are you sure?')", :method => :delete}) %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
        <br />
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">

     $(document).ready(function() {
    $('#example').dataTable({"sPaginationType": "full_numbers"});


   
});
    </script>